@model IEnumerable<BDate.Models.Profile>

@{
    ViewData["Title"] = "Match Page";
}

<div class="text-center">
    <h1 class="display-4">Meklējiet partneri</h1>
</div>
<form>
    @foreach (var item in Model)
    {
        <div class="container">
            <div class="row">
                <div class="form-group col col-sm-12">
                    <label>@item.FirstName, @item.LastName</label>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="form-group col col-sm-12">
                    <label>@item.Gender (vīrietis♂, sieviete♀):</label>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="form-group col col-sm-3">
                    <button type="submit" class="btn btn-primary btn-full-space testA">Like😎</button>
                </div>
                <div class="form-group col col-sm-3">
                    <button type="submit" class="btn btn-primary btn-full-space testB">Dislike😒</button>
                </div>
            </div>
        </div>
    }
</form>
<style>
    .testA {
        background-color: #4CAF50 !important;
    }

    .testB {
        background-color: #8B0000 !important;
    }

    .btn-full-space {
        width: 70%;
    }
</style>