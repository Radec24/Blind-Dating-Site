@model IEnumerable<BDate.Models.Profile>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Matches</h1>

<p>
    <a asp-action="Details" asp-route-id="@ViewBag.currentUserId">My profile</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personalities)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hobbies)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    if (((IList<string>)ViewBag.profileIdOfAlreadyMatchedId).Contains(item.UserId))
    { 
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            @if (item.Setting.isHiddenLastName == null || item.Setting.isHiddenLastName == true)
            {
                <td>
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
            }
            @if (item.Setting.isHiddenAge == null || item.Setting.isHiddenAge == true)
            {
                <td>
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @if (item.Personalities.Count() != 0)
                {
                    @foreach (var personality in item.Personalities)
                    {
                        @Html.DisplayFor(modelItem => personality.PersonalityName)
                        <br />
                    }
                }
                else
                {

                }
            </td>
            <td>
                @if (item.Hobbies.Count() != 0)
                {
                    @foreach (var hobby in item.Hobbies)
                    {
                        @Html.DisplayFor(modelItem => hobby.HobbyName)
                        <br />
                    }
                }
                else
                {
                <td>
                </td>
                }
                <td>
                <div>
                    <form method="post">
                        <input type="hidden" name=profileId value="@item.UserId">
                        <input type="submit" name=postSubmit value="Lets chat">
                    </form>
                </div>
                </td>
                </td>
            </tr>
        }
    else if (((IList<string>)ViewBag.profileIdOfAlreadyMatchedId).Count()==0)
    {
    <p>Currently, no one has matched you 😭</p>
        break;
    }
}
@foreach (var item in Model) {
    if (((IList<string>)ViewBag.matchesOfCureentUser).Contains(item.UserId))
    { 
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            @if (item.Setting.isHiddenLastName == null || item.Setting.isHiddenLastName == true)
            {
                <td>
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
            }
            @if (item.Setting.isHiddenAge == null || item.Setting.isHiddenAge == true)
            {
                <td>
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @if (item.Personalities.Count() != 0)
                {
                    @foreach (var personality in item.Personalities)
                    {
                        @Html.DisplayFor(modelItem => personality.PersonalityName)
                        <br />
                    }
                }
                else
                {

                }
            </td>
            <td>
                @if (item.Hobbies.Count() != 0)
                {
                    @foreach (var hobby in item.Hobbies)
                    {
                        @Html.DisplayFor(modelItem => hobby.HobbyName)
                        <br />
                    }
                }
                else
                {
                <td>
                </td>
                }
        <td>
            <div>
                <input type="submit" name=postSubmit value="Your match is sent🥰" disabled>
            </div>
        </td>
                </td>
            </tr>
        }
    else if (((IList<string>)ViewBag.matchesOfCureentUser).Count()==0)
    {
    <p>Currently, you have not matched anyone 😭</p>
        break;
    }
}

 </tbody>
</table>
