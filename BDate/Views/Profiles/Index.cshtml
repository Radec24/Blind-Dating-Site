@model IEnumerable<BDate.Models.Profile>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-lg overflow-hidden">
    <div class="row justify-content-lg-center">
        <div class="col-lg-6 text-center">
            <h3>Find Match</h3>
        </div>
    </div>
    <div class="row mt-4">
        @foreach (var item in Model) {
            <div class="col-md-4 mt-4">                <div class="card" style="width: 100%;">
                    <div class="card-header">
                        <div class="d-flex justify-content-between">
                            <h5 class="card-title">@item.FirstName</h5>
                            <h5 class="card-title">@(DateTime.Now.Year - item.DateOfBirth.Year)</h5> 
                        </div>
                    </div>
                    <div class="card-body d-flex justify-content-between">
                        @if (item.Personalities.Count() != 0) {
                            <div class="col-lg-12 mb-4">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <button class="btn btn-primary btn-w100" type="button" data-toggle="collapse" data-target="#@item.ApplicationUser.Email.Replace(".", "").Replace("@","p")" aria-expanded="false" aria-controls="@item.ApplicationUser.Email.Replace(".", "").Replace("@","p")">
                                            Personalities
                                        </button>
                                    </div>
                                    <div id="@item.ApplicationUser.Email.Replace(".", "").Replace("@","p")" class="panel-collapse collapse">
                                        <div class="list-group">
                                            @foreach (var personality in item.Personalities.Take(3)) {
                                                <label class="list-group-item">
                                                    @personality.PersonalityName
                                                </label>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-body d-flex justify-content-between">
                        @if (item.Hobbies.Count() != 0) {
                            <div class="col-lg-12 mb-4">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <button class="btn btn-primary btn-w100" type="button" data-toggle="collapse" data-target="#@item.ApplicationUser.Email.Replace(".", "").Replace("@","h")" aria-expanded="false" aria-controls="@item.ApplicationUser.Email.Replace(".", "").Replace("@","h")">
                                            Hobbies
                                        </button>
                                    </div>
                                    <div id="@item.ApplicationUser.Email.Replace(".", "").Replace("@","h")" class="panel-collapse collapse">
                                        <div class="list-group">
                                            @foreach (var hobby in item.Hobbies.Take(3)) {
                                                <label class="list-group-item">
                                                    @hobby.HobbyName
                                                </label>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-body d-flex justify-content-center">
                        <div>
                            <a asp-action="Details" asp-route-id="@item.UserId">More info</a>
                        </div>
                        </div>
                        <div class="card-footer d-flex justify-content-center">
                        @if (((IList<string>)ViewBag.matchesOfCureentUser).Contains(item.UserId)) {
                            <input type="submit" name=postSubmit value="Your match is sent🥰" disabled>
                        } else if (((IList<string>)ViewBag.profileIdOfAlreadyMatchedId).Contains(item.UserId)) {
                            <input type="submit" name=postSubmit value="They matched you😍" disabled>
                        } else {
                            <form method="post">
                                <input type="hidden" name=profileId value="@item.UserId">
                                <input type="submit" name=postSubmit value="Send match😘">
                            </form>
                        }
                    </div>
                </div>            </div>        }    </div>
</div>
<style>
    input:disabled {
        color: lightcoral;
    }
    .btn-w100 {
        width:100%;
    }
</style>