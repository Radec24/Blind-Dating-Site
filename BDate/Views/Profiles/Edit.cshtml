@model BDate.Models.Profile

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Profile</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UserId" />
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfBirth" class="control-label"></label>
                    <input asp-for="DateOfBirth" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <input asp-for="Gender" class="form-control" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
            <div class="col-md-6">
                @if (ViewBag.Personality != null)
                {
                    <h4>Personalities</h4>
                    foreach (var item in ViewBag.Personality)
                    {
                        @*IF Profile HAS PERSONALITY FROM OVERALL PULL (item ViewBag.Personality)*@
                        @*Model.Personalities means Profile.Personalities => Personalities linked with Profile*@
                        @Model.Personalities.ToHashSet().Contains(item);
                        if (@Model.Personalities.ToHashSet().Contains(item) == true)
                        {
                            <div class="form-group">
                                <input id="scales" type="checkbox" name=checkedValues value="@item.PersonalityId" checked>
                                <label for="@item.PersonalityName">@item.PersonalityName</label>
                            </div>
                        }
                        else
                        {
                            <div class="form-group">
                                <input id="scales" type="checkbox" name=checkedValues value="@item.PersonalityId">
                                <label for="@item.PersonalityName">@item.PersonalityName</label>
                            </div>
                        }
                        @*<tr>
                    <td>
                        @item.PersonalityId
                        @item.PersonalityName
                        @Html.TextBox("NameOfTheTextbox", (String)item.PersonalityName)
                    </td>
                </tr>*@
                    }
                }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<style>
    form {
        display:flex
    }
</style>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
