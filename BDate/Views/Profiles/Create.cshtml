@model BDate.Models.Profile

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Profile</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfBirth" class="control-label"></label>
                    <input asp-for="DateOfBirth" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    @Html.DropDownListFor(m => m.Gender, new List<SelectListItem>
                    { new SelectListItem{Text="Male", Value="Male"},
                    new SelectListItem{Text="Female", Value="Female"}}, "Please select")
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
            <div class="col-md-3">
                @if (ViewBag.Personality != null)
                {
                    <h4>Personalities</h4>
                    @foreach (var item in ViewBag.Personality)
                    {
                        @*IF Profile HAS PERSONALITY FROM OVERALL PULL (item ViewBag.Personality)*@
                        @*Model.Personalities means Profile.Personalities => Personalities linked with Profile*@
                        <div class="form-group">
                            <input id="scales" type="checkbox" name=checkedPersonalityValues value="@item.PersonalityId">
                            <label for="@item.PersonalityName">@item.PersonalityName</label>
                        </div>
                    }
                }
                </div>
            <div class="col-md-3">
                @if (ViewBag.Hobby != null)
                {
                    <h4>Hobbies</h4>
                    @foreach (var item in ViewBag.Hobby)
                    {
                        @*IF Profile HAS PERSONALITY FROM OVERALL PULL (item ViewBag.Personality)*@
                        @*Model.Personalities means Profile.Personalities => Personalities linked with Profile*@
                        <div class="form-group">
                            <input id="scales" type="checkbox" name=checkedHobbyValues value="@item.HobbyId">
                            <label for="@item.HobbyName">@item.HobbyName</label>
                        </div>
                    }
                }
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<style>
    form {
        display: flex
    }
</style>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
