@model BDate.Models.Setting

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-lg">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="SettingId" />
        <div class="row card p-4 justify-content-lg-center mt-4">
            <div class="col-lg-6 offset-lg-3 d-flex justify-content-center">
                <h1 class="display-4">Profile settings</h1>
            </div>
            <div class="col-lg-6 offset-lg-3">
                <div class="text-left mt-4">
                    <h3>Privacy</h3>
                </div>
            </div>
            <div class="col-lg-6 offset-lg-3">
                <div class="custom-control custom-switch custom-switch-md">
                    <input type="checkbox" class="custom-control-input" id="customSwitch1" asp-for="isHiddenAge">
                    <label class="custom-control-label align-middle h5 font-weight-normal" for="customSwitch1">Hide age</label>
                </div>
            </div>
            <div class="col-lg-6 offset-lg-3">
                <div class="custom-control custom-switch custom-switch-md">
                    <input type="checkbox" class="custom-control-input" id="customSwitch2" asp-for="isHiddenLastName">
                    <label class="custom-control-label align-middle h5 font-weight-normal" for="customSwitch2">Hide Last name</label>
                </div>
            </div>
            <div class="col-lg-6 offset-lg-3">
                <div class="btn-toolbar pl-0 d-flex justify-content-center">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <a asp-controller="Profiles" asp-action="Edit" asp-route-id="@Model.SettingId">Back to Profile</a>
                </div>
            </div>
        </div>
    </form>
</div>
<style>
    .form-control {
        background-color: #E8E8E8;
    }

    .btn-full-space {
        width: 100%;
    }

    /*
    Custom-switch settings for md scale
    */
    .custom-switch.custom-switch-md .custom-control-label {
        padding-left: 2rem;
        padding-bottom: 1.5rem;
    }

    .custom-switch.custom-switch-md .custom-control-label::before {
        height: 1.5rem;
        width: calc(2rem + 0.75rem);
        border-radius: 3rem;
    }

    .custom-switch.custom-switch-md .custom-control-label::after {
        width: calc(1.5rem - 4px);
        height: calc(1.5rem - 4px);
        border-radius: calc(2rem - (1.5rem / 2));
    }

    .custom-switch.custom-switch-md .custom-control-input:checked ~ .custom-control-label::after {
        transform: translateX(calc(1.5rem - 0.25rem));
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
